<!-- //home image with content block -->
<!-- courses section -->
<div class="w3l-grids-block-5 home-course-bg py-5" id="courses">
    <div class="container py-md-5 py-4">
        <div class="title-main text-center mx-auto mb-md-5 mb-4" style="max-width:500px;">
            <p class="text-uppercase">Best Courses</p>
            <h3 class="title-style">Find The Right Course For You</h3>
        </div>
        <div class="row justify-content-center">
            @if (Model.Courses != null && Model.Courses.Any())
            {
                foreach (var course in Model.Courses)
                {
                    <div class="col-lg-4 col-md-6 mt-4">
                        <div class="coursecard-single">
                            <div class="grids5-info position-relative">
                                <img src="@Url.Content("~/images/classrom.jpg")" alt="Course Image" class="img-fluid" />
                                <div class="meta-list">
                                    <span class="text-muted">@course.Name</span>
                                </div>
                            </div>
                            <div class="content-main-top">
                                <div class="content-top mb-4 mt-3">
                                    <ul class="list-unstyled d-flex align-items-center justify-content-between">
                                        <li><i class="fas fa-clock"></i> @course.Duration weeks</li>
                                    </ul>
                                </div>
                                <h4><span class="text-muted">@course.Name</span></h4>
                                <p>@course.Description</p>
                                <div class="top-content-border d-flex align-items-center justify-content-between mt-4 pt-4">
                                    <h6>Free</h6>
                                    <span class="btn btn-style-primary disabled">Know Details <i class="fas fa-arrow-right"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No courses available at the moment.</p>
            }
        </div>
        <div class="text-center mt-sm-5 mt-4 pt-sm-0 pt-1">
            <span class="btn btn-style btn-style-secondary disabled mt-sm-3">
                Browse more courses
            </span>
        </div>
    </div>
</div>
<!-- //courses section -->
<!-- classes and subjects section -->
<div class="w3l-grids-block-5 home-course-bg py-5" id="classes">
    <div class="container py-md-5 py-4">
        <div class="title-main text-center mx-auto mb-md-5 mb-4" style="max-width:500px;">
            <p class="text-uppercase">School Classes</p>
            <h3 class="title-style">Find The Classes and Their Subjects</h3>
        </div>
        <div class="row justify-content-center">
            @if (Model.SchoolClasses != null && Model.SchoolClasses.Any())
            {
                foreach (var schoolClass in Model.SchoolClasses)
                {
                    <div class="col-lg-4 col-md-6 mt-4">
                        <div class="coursecard-single">
                            <div class="grids5-info position-relative">
                                <img src="@Url.Content("~/images/subjects.jpg")" alt="Class Image" class="img-fluid scale-animation" />
                                <div class="meta-list">
                                    <span class="text-muted">@schoolClass.ClassName</span>
                                </div>
                            </div>
                            <div class="content-main-top">
                                <div class="content-top mb-4 mt-3">
                                    <ul class="list-unstyled d-flex align-items-center justify-content-between">
                                        <li><i class="fas fa-calendar-alt"></i> Start: @schoolClass.StartDate?.ToString("dd/MM/yyyy")</li>
                                        <li><i class="fas fa-calendar-check"></i> End: @schoolClass.EndDate?.ToString("dd/MM/yyyy")</li>
                                    </ul>
                                </div>
                                <h4><span class="text-muted">@schoolClass.ClassName</span></h4>
                                <p>Subjects:</p>
                                <ul>
                                    @foreach (var subject in schoolClass.Subjects)
                                    {
                                        <li>@subject</li>
                                    }
                                </ul>
                                <div class="top-content-border d-flex align-items-center justify-content-between mt-4 pt-4">
                                    <h6>Active</h6>
                                    <span class="btn btn-style-primary disabled">Class Details <i class="fas fa-arrow-right"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No school classes available at the moment.</p>
            }
        </div>
        <div class="text-center mt-sm-5 mt-4 pt-sm-0 pt-1">
            <span class="btn btn-style btn-style-secondary disabled mt-sm-3">
                Browse more classes
            </span>
        </div>
    </div>
</div>
<!-- //classes and subjects section -->
